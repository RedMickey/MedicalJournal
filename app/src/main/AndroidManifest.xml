<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.michel.mycalendar2.activities">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddTreatmentActivity"
            android:label="@string/title_activity_add_treatment"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar2" />
        <activity android:name=".AlarmActivity"
            android:screenOrientation="portrait"/>

        <service
            android:name="com.example.michel.mycalendar2.services.AlarmService"
            android:enabled="true" />

        <receiver android:name="com.example.michel.mycalendar2.utils.AlarmReceiver" />

        <activity
            android:name=".AddMeasurementActivity"
            android:label="@string/title_activity_add_measurement"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar2"></activity>
    </application>

</manifest>