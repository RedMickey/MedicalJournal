<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:rowCount="3"
    android:columnCount="7">

    <TextView
        android:layout_column="0"
        android:layout_row="0"
        android:text="Пн"
        style="@style/DaysOfWeekStyle"
        />
    <TextView
        android:layout_column="1"
        android:layout_row="0"
        android:text="Вт"
        style="@style/DaysOfWeekStyle"
        />
    <TextView
        android:layout_column="2"
        android:layout_row="0"
        android:text="Ср"
        style="@style/DaysOfWeekStyle"
        />
    <TextView
        android:layout_column="3"
        android:layout_row="0"
        android:text="Чт"
        style="@style/DaysOfWeekStyle"
        />
    <TextView
        android:layout_column="4"
        android:layout_row="0"
        android:text="Пт"
        style="@style/DaysOfWeekStyle"
        />
    <TextView
        android:layout_column="5"
        android:layout_row="0"
        android:text="Сб"
        style="@style/DaysOfWeekStyle"
        />
    <TextView
        android:layout_column="6"
        android:layout_row="0"
        android:text="Вс"
        style="@style/DaysOfWeekStyle"
        />

    <CheckBox
        android:layout_column="0"
        android:layout_row="1"
        android:id="@+id/cb_mon"
        style="@style/DaysOfWeekStyle"/>
    <CheckBox
        android:layout_column="1"
        android:layout_row="1"
        android:id="@+id/cb_tue"
        style="@style/DaysOfWeekStyle"/>
    <CheckBox
        android:layout_column="2"
        android:layout_row="1"
        android:id="@+id/cb_wed"
        style="@style/DaysOfWeekStyle"/>
    <CheckBox
        android:layout_column="3"
        android:layout_row="1"
        android:id="@+id/cb_thu"
        style="@style/DaysOfWeekStyle"/>
    <CheckBox
        android:layout_column="4"
        android:layout_row="1"
        android:id="@+id/cb_fri"
        style="@style/DaysOfWeekStyle"/>
    <CheckBox
        android:layout_column="5"
        android:layout_row="1"
        android:id="@+id/cb_sat"
        style="@style/DaysOfWeekStyle"/>
    <CheckBox
        android:layout_column="6"
        android:layout_row="1"
        android:id="@+id/cb_syn"
        style="@style/DaysOfWeekStyle"/>

    <include layout="@layout/date_period"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="7"
        android:id="@+id/specific_days_period"/>
</GridLayout>
