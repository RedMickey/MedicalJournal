<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp"
    android:rowCount="1"
    android:columnCount="6"
    >

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_gravity="center_vertical"
        android:id="@+id/is_done_chb"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0"
        android:src="@drawable/ic_pill"
        android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="0"
        android:layout_columnWeight="0.55"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="dgdfg"
            android:id="@+id/reminder_time_tv"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="dgdfg"
            android:id="@+id/pill_name_tv"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_row="0"
        android:layout_columnWeight="0.3"
        android:textSize="15dp"
        android:text="1 sh"
        android:layout_gravity="center_vertical"
        android:id="@+id/pill_count_type_tv"
        />

    <ImageView
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_column="4"
        android:layout_row="0"
        android:layout_columnWeight="0.15"
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent"
        android:id="@+id/having_meals_iv"/>

    <ImageView
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_column="5"
        android:layout_row="0"
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent"
        android:id="@+id/late_indication"/>

</GridLayout>
