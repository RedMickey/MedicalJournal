<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="7dp"
    android:paddingVertical="5dp"
    android:layout_marginBottom="7dp"
    android:id="@+id/statistic_linear_layout"
    android:background="?android:colorBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_thermometer"
            android:layout_marginRight="7dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/measurement_iv_rmi"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:text="Температура"
            android:layout_centerVertical="true"
            android:id="@+id/measurement_name_tv_rmi"
            android:layout_toRightOf="@+id/measurement_iv_rmi"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#000"
            android:text="Активен"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/active_ind_tv"
            />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_red_circle"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@+id/active_ind_tv"
            android:layout_centerVertical="true"
            android:id="@+id/active_ind_iv"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#000"
            android:text="1 раз в день"
            android:layout_alignParentLeft="true"
            android:id="@+id/count_of_taking_measurements"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#000"
            android:text="с 156456 по 24643248"
            android:id="@+id/time_period_rmi"
            android:layout_below="@+id/count_of_taking_measurements"
            />
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/time_period_rmi"
            android:id="@+id/having_meals_type_rmi"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#000"
            android:text="Измерений произведено: "
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#000"
            android:text="1"
            android:id="@+id/count_of_taking_measurements_done"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_separator"
        android:layout_marginVertical="3dp"
        android:layout_marginHorizontal="15dp"
        />
