<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingVertical="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_pill_100"
            android:layout_marginRight="7dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/pill_iv_rmi"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:text="Циклоферон"
            android:layout_centerVertical="true"
            android:id="@+id/pill_name_tv_rmi"
            android:layout_toRightOf="@+id/pill_iv_rmi"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#000"
            android:text="Активен"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/active_ind_tv"
            />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_red_circle"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@+id/active_ind_tv"
            android:layout_centerVertical="true"
            android:id="@+id/active_ind_iv"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19dp"
        android:textColor="#000"
        android:layout_marginLeft="30dp"
        android:text="1 шт"
        android:id="@+id/pill_count_tv_rmi"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#000"
            android:text="1 раз в день"
            android:layout_alignParentLeft="true"
            android:id="@+id/count_of_taking_medicine"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#000"
            android:text="с 156456 по 24643248"
            android:id="@+id/time_period_rmi"
            android:layout_below="@+id/count_of_taking_medicine"
            />
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/time_period_rmi"
            android:id="@+id/having_meals_type_rmi"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#000"
            android:text="Осталось приёмов: "
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#000"
            android:text="1"
            android:id="@+id/count_of_taking_medicine_left"
            />

    </LinearLayout>

</LinearLayout>
