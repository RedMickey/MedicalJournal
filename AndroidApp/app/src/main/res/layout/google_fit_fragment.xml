<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:id="@+id/google_fit_login_layout"
        android:orientation="vertical"
        android:visibility="visible"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/id_view_top"
            android:layout_alignParentTop="true"/>
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:id="@+id/google_fit_logo"
            android:src="@drawable/google_fit1"
            android:layout_below="@id/id_view_top"
            android:layout_above="@id/google_fit_mg_tv"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/google_fit_mg_tv"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="20dp"
            android:text="Подключите аккаунт Google Fit"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginHorizontal="25dp"
            android:id="@+id/log_in_google_fit_button"
            android:layout_below="@+id/google_fit_mg_tv"
            android:layout_centerHorizontal="true"
            android:text="Войти"/>
    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/google_fit_content_layout"
            android:orientation="vertical"
            android:visibility="visible">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/google_fit1"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp">
                <Button
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="tez1"
                    android:textAllCaps="false"
                    android:id="@+id/steps_but"
                    android:lineSpacingExtra="5dp"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_separator"
                    android:layout_marginVertical="15dp"
                    />
                <Button
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="tez1"
                    android:textAllCaps="false"
                    android:id="@+id/calories_but"
                    android:lineSpacingExtra="5dp"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_separator"
                    android:layout_marginVertical="15dp"
                    />
                <Button
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="tez1"
                    android:textAllCaps="false"
                    android:id="@+id/kilometers_but"
                    android:lineSpacingExtra="5dp"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_separator"
                    android:layout_marginVertical="15dp"
                    />
                <Button
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:text="tez1"
                    android:textAllCaps="false"
                    android:id="@+id/act_duration_but"
                    android:lineSpacingExtra="5dp"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    />
            </LinearLayout>
            <include layout="@layout/gfit_content_item"
                android:id="@+id/pulse_item" />
            <include layout="@layout/gfit_content_item"
                android:id="@+id/weight_item" />
            <include layout="@layout/gfit_content_item"
                android:id="@+id/blood_pressure_item" />
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</android.support.constraint.ConstraintLayout>
